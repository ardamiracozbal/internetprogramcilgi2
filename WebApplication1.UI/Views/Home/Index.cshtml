@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "_admin";
}

<div class="container">

    <h1>Exam CRUD İşlemleri</h1>

    <h2>Sınav Ekle</h2>
    <form id="addExamForm" class="mb-4">
        <div class="mb-3">
            <input type="text" id="examName" placeholder="Sınav Adı" required class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Sınav Ekle</button>
    </form>

    <h2>Sınav Listesi</h2>
    <table id="examsTable" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sınav satırları buraya eklenecek -->
        </tbody>
    </table>

    <h2>Sınav Güncelle</h2>
    <form id="updateExamForm" class="mb-4">
        <input type="hidden" id="updateExamId" />
        <div class="mb-3">
            <input type="text" id="updateExamName" placeholder="Sınav Adı" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Sınavı Güncelle</button>
    </form>

</div>
@section Scripts {
    <script src="~/ajax/index.js"></script>
}
