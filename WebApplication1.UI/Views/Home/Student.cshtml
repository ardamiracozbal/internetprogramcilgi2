@{
    Layout = "_admin";
}

<div class="container">
    <h1>Öğrenci CRUD İşlemleri</h1>

    <h2>Öğrenci Ekle</h2>
    <form id="addStudentForm" class="mb-4">
        <div class="mb-3">
            <input type="text" id="studentName" placeholder="Öğrenci Adı" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Öğrenci Ekle</button>
    </form>

    <h2>Öğrenci Listesi</h2>
    <table id="studentsTable" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <!-- Öğrenci satırları buraya eklenecek -->
        </tbody>
    </table>

    <h2>Öğrenci Güncelle</h2>
    <form id="updateStudentForm" class="mb-4">
        <input type="hidden" id="updateStudentId" />
        <div class="mb-3">
            <input type="text" id="updateStudentName" placeholder="Öğrenci Adı" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Öğrenciyi Güncelle</button>
    </form>
</div>

@section Scripts {
    <script src="~/ajax/student.js"></script>
}
